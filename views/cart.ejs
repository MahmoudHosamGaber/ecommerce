    <script>
        var main = document.querySelector(".main");
        var temp = "";
        function display(input) {
          for (var i = 0; i < input.length; i++) {
            main.innerHTML =
              main.innerHTML + `
              <div class="cart-item">
                <img id="image" src="/${input[i]}.jpg">
                <div class="item-price">
                  <h1>Price: <span class="price">$59.99</span></h1>
                  <h2>Count: <span class="count">1</span> </h2>
                </div>
              </div>`
        
          }
        }
        if (main.firstChild) {
          temp += main.firstChild.textContent;
          if (temp) {
            display(temp.split(","));
          }
          main.removeChild(main.firstChild);
        }


        var flag = document.querySelector(".flag");
        var alert = document.querySelector("#alert");
        var temp = "";
        if (flag.firstChild) temp = flag.firstChild.textContent;
        if (temp == "true") alert.style.display = "block";
        flag.removeChild(flag.firstChild);

